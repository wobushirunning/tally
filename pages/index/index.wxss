/**index.wxss**/
page {
  background-color: #F6F6F6;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
}

.money-text {
  font-size: 14px;
  margin-top: 10rpx;
}

.add-button {
  font-size: 16px;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background-color: #ff0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tally-list {
  position: relative;
}

.tally-cell {
  height: 120rpx;
  margin-top: 10rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  z-index: 100;
  transition: all .25s ease;
  /* -webkit-animation: all .25s ease; */
}

.tally-cell > .detail-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tally-cell > .money-text {
  min-width: 240rpx;
  text-align: right;
}

.tally-cell .time-text {
  position: absolute; 
  bottom: 0;
  right: 10rpx;
  font-size: 12px;
  color: #ccc;
}

.tally-set {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  box-sizing: border-box;
  font-size: 14px;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  position: absolute;
  z-index: 0;  
  top: 0;
}

.set-edit {
  width: 130rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: #19be6b;
  color: #fff;
}

.set-del {
  width: 130rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: #ed3f14;
  color: #fff;
}